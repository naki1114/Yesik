<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top">

    <TextView
        android:id="@+id/tableRegister"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="룸 / 테 이 블   등 록"
        android:textSize="30dp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tableNoText"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="테 이 블  n o."
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/roomTableText"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="룸 / 테 이 블"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/possibilityText"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="75dp"
            android:text="n 인 용"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/roomTableInput"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="번   호"
            android:inputType="number"
            android:gravity="center" />

        <EditText
            android:id="@+id/possibilityInput"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="룸 or 테 이 블"
            android:inputType="number"
            android:gravity="center" />

        <EditText
            android:id="@+id/quantityInput"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="n 인"
            android:inputType="number"
            android:gravity="center" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="등 록"
            android:backgroundTint="#000000" />

    </LinearLayout>

    <!--    <ListView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="50dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/exRoomTable1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/exPossibility1"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="룸"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/exQuantity1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="75dp"
            android:text="8인"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/exRoomTable2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="2"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/exPossibility2"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="테 이 블"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/exQuantity2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="75dp"
            android:text="4인"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/exRoomTable3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="3"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/exPossibility3"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="테 이 블"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/exQuantity3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="75dp"
            android:text="6인"
            android:gravity="center"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>
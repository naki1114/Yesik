<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:contentDescription="뒤로가기"
        android:src="@drawable/backbutton" />

    <TextView
        android:id="@+id/manageMenu"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="예 약   관 리"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/dongdong" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tableNoText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:text="No."
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong" />

        <TextView
            android:id="@+id/roomTableText"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="아 이 디"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong" />

        <TextView
            android:id="@+id/possibilityText"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="시   간"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong" />

        <TextView
            android:id="@+id/usdCheckText"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:text="상   태"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reservationListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />

</LinearLayout>
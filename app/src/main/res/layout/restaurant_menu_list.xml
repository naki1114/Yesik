<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:src="@drawable/pasta"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/menuNameEdit"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong"
            android:gravity="center"
            android:visibility="gone"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/menuNameView"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong"
            android:gravity="center"
            android:visibility="visible"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/menuPriceEdit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong"
            android:gravity="center"
            android:visibility="gone"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/menuPriceView"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong"
            android:gravity="center"
            android:visibility="visible"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/modifyMenu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="수 정"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong"
            android:backgroundTint="@color/lightSkyBlue"/>

        <Button
            android:id="@+id/removeMenu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="삭 제"
            android:textColor="@color/black"
            android:fontFamily="@font/dongdong"
            android:backgroundTint="@color/lightSkyBlue" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menuImageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/menuNameEdit"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dongdong"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/menuNameView"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dongdong"
            android:gravity="center"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/menuPriceEdit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:fontFamily="@font/dongdong"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/menuPriceView"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:fontFamily="@font/dongdong"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/modifyMenu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/lightSkyBlue"
            android:fontFamily="@font/dongdong"
            android:text="수 정"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/removeMenu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/lightSkyBlue"
            android:fontFamily="@font/dongdong"
            android:text="삭 제"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>